pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh 'docker build -t app -f ../../app/Dockerfile ../../app'
                sh 'docker save app -o app.tar'
                archiveArtifacts artifacts: 'app.tar', fingerprint: true
            }
        }
    }
    post {
        success {
            build job: 'DeployPipeline'  // Triggers deploy job
        }
    }
}
